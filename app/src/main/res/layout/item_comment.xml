<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp" >

        <com.funnyAnimal.view.CircleImageView
            android:id="@+id/user_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/ic_user_photo"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_photo"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray1"
                tools:text="青峰"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_below="@id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="07-23"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/text_gray2"/>

            <ImageView
                android:id="@+id/icon_gender"
                android:layout_toRightOf="@id/tv_name"
                android:layout_width="15dp"
                android:layout_height="15dp"
                tools:src="@mipmap/icon_male"
                android:layout_marginLeft="4dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="这里是评论内容"
        android:textSize="14sp"
        android:textColor="@color/text_gray1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"/>

    <LinearLayout
        android:id="@+id/parent_li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/back_groud_gray"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray1"
            android:textSize="12sp"
            android:text="回复"/>

        <TextView
            android:id="@+id/tv_parent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="蜡笔小鑫"
            android:textSize="12sp"
            android:textColor="@color/text_blue"/>

        <TextView
            android:id="@+id/tv_parent_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=":我是宇宙最帅"
            android:textSize="12sp"
            android:textColor="@color/text_gray1"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_gray3"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"/>

</LinearLayout>