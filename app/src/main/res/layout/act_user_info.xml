<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_groud_gray">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wrapper_rl"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:background="@mipmap/icon_menu_back2">

        <RelativeLayout
            android:id="@+id/user_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <com.funnyAnimal.view.CircleImageView
                android:id="@+id/user_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_user_photo"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_toRightOf="@id/user_photo"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="火星人"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/text_corner_stroke"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/user_motto"
                android:layout_toRightOf="@id/user_photo"
                android:layout_toLeftOf="@id/tv_modify"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_below="@id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您还没有登录"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_focus"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/ripple"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的关注"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColor="@color/text_gray2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_gray_back_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_fans"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/ripple"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的粉丝"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColor="@color/text_gray2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_gray_back_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/ripple"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登陆"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColor="@color/text_gray2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_gray_back_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/ripple"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColor="@color/text_gray2" />

        <View
            android:id="@+id/red_dot"
            android:layout_toRightOf="@id/tv_about"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/red_dot"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_gray_back_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_donate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/ripple"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="感恩捐赠"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColor="@color/text_gray2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_gray_back_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>
    
</LinearLayout>